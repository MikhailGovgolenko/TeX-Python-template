{
  "name": "LuaTeX + Python",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y texlive-luatex texlive-latex-extra texlive-lang-cyrillic texlive-fonts-recommended texlive-science fonts-cmu latexmk && pip install --user jupyter matplotlib numpy pandas",
  "customizations": {
    "vscode": {
      "extensions": [
        "alefragnani.project-manager",
        "brboer.vsc-conceal",
        "cweijan.vscode-office",
        "draivin.hscopes",
        "draivin.hsnips",
        "esbenp.prettier-vscode",
        "github.codespaces",
        "github.copilot",
        "github.copilot-chat",
        "james-yu.latex-workshop@10.5.0",
        "janisdd.vscode-edit-csv",
        "jeffersonqin.latex-snippets-jeff",
        "mechatroner.rainbow-csv",
        "ms-ceintl.vscode-language-pack-ru",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode-remote.remote-containers",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
